        	{{ form_row(form.equipo.top_cover,{"required":"false"}) }}
        </div>
        <div class="col" id="equipo_tipo_pantalla">
        	{{ form_row(form.equipo.tipo_pantalla,{"required":"false"}) }}
        </div> 

    </div>
        {{ form_row(form.equipo.observaciones,{"label":"Observaciones sobre el Equipo a reparar"}) }}
        
    
    {{ form_row(form.accesorios,{"label":"Accesorios que se dejan en clinica"}) }}
