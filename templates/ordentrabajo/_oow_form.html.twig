        <div class="col" id="equipo_color">
            {{ form_row(form.equipo.color,{"required":"false"}) }}
        </div>
        <div class="col" id="equipo_colorlcd">
        	{{ form_row(form.equipo.color_lcd,{"required":"false","label":"LCD / Bezel"}) }}
        </div>
        <div class="col" id="equipo_back">
        	{{ form_row(form.equipo.back_cover,{"required":"false"}) }}
        </div> 
