{% extends 'master.html.twig' %}

{% block content %}
    <h1>Equipo {{ equipo.nserie }}</h1>

    {{ include('equipo/_form.html.twig', {'button_label': 'Update'}) }}
    <h4>Ordenes con este dispositivo</h4>
    <table class="table">
    	<tr>
    		<th scope="col">Orden</th>
    		<th scope="col">Fecha Entrada</th>
    		<th scope="col">Fecha Salida</th>
    	</tr>
		{% for orden in equipo.ordenestrabajo %}
		<tr>
			<td>
				<a href="{{ path('ordentrabajo_edit',{'id':orden.id}) }}">{{ orden.norden }}</a>
			</td>
			<td>{{ orden.fechaEntrada|date("d/m/Y") }}</td>
			<td>{{ orden.fechaSalida|date("d/m/Y") }}</td>
		</tr>
		{% endfor %}
	</table>
    <a href="{{ path('equipo_index') }}">back to list</a>

    {{ include('equipo/_delete_form.html.twig') }}
{% endblock %}
