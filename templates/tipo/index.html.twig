{% extends 'master.html.twig' %}

{% block title %}Tipo index{% endblock %}

{% block content %}
    <h1>Tipo index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>IdTr</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for tipo in tipos %}
            <tr>
                <td>{{ tipo.id }}</td>
                <td>{{ tipo.nombre }}</td>
                <td>{{ tipo.idTr }}</td>
                <td>
                    <a href="{{ path('tipo_show', {'id': tipo.id}) }}">show</a>
                    <a href="{{ path('tipo_edit', {'id': tipo.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('tipo_new') }}">Create new</a>
{% endblock %}
